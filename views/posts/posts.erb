<% if @items %>

    <table>

        <% @items.each do |i|%>

        <tr valign="top">
            <td><a href="/item|i.id %>" class="btn btn-warning"><%= i.id %></a></td>
            <td><%=i.name%></td>
            <td><%=i.description%></td>
            <td><%=i.cost_Day%></td>
            <td><%=i.cost_Week%></td>
            <td><a href="/post/update/<%= i.id %>" class="btn btn-warning">Update Item</a></td>

            <td>
            <form class="" action="/remove/<%=i.id %>" method="POST">
             <button type="submit" name="button" class="btn btn-danger">Delete</button>
           </form>
         </td>

        </tr>
        <%end%>

    </table>
<% end %>

